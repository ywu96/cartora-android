<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yifanfwu.locationevents.Fragments.EventCreateFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/event_name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:hint="@string/event_name_hint"
            android:textSize="16dp"/>

        <LinearLayout
            android:id="@+id/event_date_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/event_name_field"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:alpha="0.9"
                android:src="@drawable/ic_date"/>

            <TextView
                android:id="@+id/event_date_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="start|center_vertical"
                android:paddingBottom="8dp"
                android:paddingStart="0dp"
                android:paddingTop="8dp"
                android:text="@string/event_date_hint"/>

            <TextView
                android:id="@+id/event_time_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="end|center_vertical"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:text="@string/event_time_hint"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_date_time_layout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:alpha="0.9"
                android:src="@drawable/ic_location"/>

            <TextView
                android:id="@+id/event_location_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:text="@string/event_location_hint"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/map_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_location_layout"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <com.google.android.gms.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="0dp"
                android:layout_height="148dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="24dp"
                android:layout_weight="10"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_people_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/map_layout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:alpha="0.9"
                android:src="@drawable/ic_people"/>

            <TextView
                android:id="@+id/event_people_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:text="@string/event_people_hint"/>
        </LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/spinner_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/spinner_background"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>


</FrameLayout>
